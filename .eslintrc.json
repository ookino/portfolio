{
  "extends": ["alloy", "alloy/react", "alloy/typescript", "next", "next/core-web-vitals"],
  "env": {
    "node": true,
    "browser": true
  },
  "globals": {
    "REACT_APP_ENV": true
  },
  "rules": {
    "camelcase": "off",
    "import/order": [
      "error",
      {
        // "groups": ["builtin", "external", "internal", ["sibling", "parent"], "index", "unknown"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
